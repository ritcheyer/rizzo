:ruby
  if defined?(primary)
    nav_type = defined?(has_submenu) ? "" : "nav__item--primary"
  else
    nav_type = "nav__item--secondary"
  end

  item_classes = [
    defined?(submenu_item) ? "nav__submenu__item" : nav_type,
    item[:image_url] ? "has-image" : "",
  ].join(" ")

- if item[:slug]

  %a.nav__item.js-nav-item{ data: item[:analytics], class: [item_classes, active, item[:extra_class]], href: item[:slug], itemprop: "url", aria: { label: active.present? ? "Current page" : nil } }<
    
    - if item[:image_url]
      = safe_image_tag(item[:image_url], class: "nav__submenu__item--image", alt: item[:image_url])

    %div{itemprop: "name", class: [item[:icon_class] ? "nav__icon #{item[:icon_class]}" : false, defined?(submenu_item) ? "" : "wv--hidden--before", "nav__submenu__item--text"] }
      = item[:title]

  - if item[:submenu]
    = render "components/navigation/submenu", item: item, show_responsive_toggle: !defined?(primary)

- else
  %span.nav__item{class: [nav_type, item[:extra_class]]}
    = item[:title]
